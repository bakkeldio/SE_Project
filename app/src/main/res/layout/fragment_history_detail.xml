<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.history.HistoryDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/history_detail_toolbar"
            layout="@layout/app_toolbar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/history_detail_info_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@id/history_detail_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/history_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawableStart="@drawable/ic_profile"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Бексултанов Дастан" />

                <TextView
                    android:id="@+id/history_detail_type_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Номер телефона: 0559840940" />

                <TextView
                    android:id="@+id/history_detail_type_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Тип оплаты: Наличные" />

                <TextView
                    android:id="@+id/history_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Дата заказа: 20.10.19" />

                <TextView
                    android:id="@+id/history_detail_paidbonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Оплачено бонусами: 50 сом" />

                <TextView
                    android:id="@+id/history_detail_prepaid_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Предоплачено бонусами: 0 сом" />

                <TextView
                    android:id="@+id/history_detail_all_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/history_detail_info_cont"
                    app:layout_constraintTop_toBottomOf="@id/history_detail_info_cont"
                    tools:text="Общая сумма: 4057 сом" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/history_detail_is_cancaled"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/history_detail_info_cont"
            app:layout_constraintTop_toTopOf="@id/history_detail_info_cont"
            tools:background="#AF1212"
            tools:text="Отменен" />

        <TextView
            android:padding="4dp"
            android:id="@+id/history_detail_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Меню"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_detail_info_cont" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_detail_menu_item_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:padding="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/history_detail_menu"
            tools:itemCount="4"
            tools:listitem="@layout/item_basket" />

        <TextView
            android:padding="4dp"
            android:id="@+id/history_detail_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скидки"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_detail_menu_item_rv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_detail_discount_item_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:padding="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/history_detail_discount"
            tools:itemCount="4"
            tools:listitem="@layout/item_basket" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>